@import "basic_styles";
$background_color: <%if team.primary_kit_colour%>
                    <%= team.primary_kit_colour %>;
                   <%else%>
                    white;
                   <%end%>



$background_color_alt: <%if team.secondary_kit_colour%>
                        <%= team.secondary_kit_colour %>;
                       <%else%>
                        black;
                       <%end%>

$color: <%if team.secondary_kit_colour%>
          <%= team.secondary_kit_colour %>;
        <%else%>
          black;
        <%end%>


$color_alt: <%if team.primary_kit_colour%>
              <%= team.primary_kit_colour %>;
            <%else%>
              white;
            <%end%>


@include basic_styles($background_color,$background_color_alt,$color,$color_alt);