.forms-edit.font-override  
  = form_for @league do |f|
    - if @league.errors.any?
      #error_explanation
        %h2= "#{pluralize(@league.errors.count, "error")} prohibited this league from being saved:"
        %ul
          - @league.errors.full_messages.each do |msg|
            %li= msg

    .row
      .col-md-12
        .form-group
          = f.label :name
          = f.text_field :name, class: "form-control"
      .col-md-12
        .form-group
          = f.label :location
          = f.text_field :location, class: "form-control"
      .col-md-12
        .actions.text-center
          = link_to 'Back', leagues_path, class: "btn btn-danger"
          = f.submit 'Save', class: "btn btn-success"
