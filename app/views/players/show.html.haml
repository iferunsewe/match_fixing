.profile-container.no-margin.font-override
  .col-sm-6.profile-left.no-margin.no-padding.text-center
    .row.profile-image-box.no-margin
      .col-sm-12.profile-image
        = image_tag @player.image.detail.url if !@player.image.nil?
      / .col-sm-12.profile-image
      /   .profile-image
    .row
      .col-sm-12.name-box
        %h2=@player.name
        %hr
        %h2
          - if @player.team.nil?
            Free Agent
          - else
            = @player.team.name
    .row
      .col-sm-12.rating-box
        - if @player.ratings != []
          -(1..@player.average_rating).each do |i|
            %i.fa.fa-star.fa-3x
        - else
          .row.lead
            #stars.starrr
              / #count
    .row
      .col-sm-12
        %h4 Personal Information
      .col-sm-12
        %p
          Age:
          %span=@player.dob || 18
        %p
          Hometown:
          %span=@player.hometown || 'London'
        %p
          Position:
          %span=@player.position || 'Defender'
                


  .col-sm-6.profile-right.no-margin.text-center
    .row.profile-stats-box
      .col-sm-12.profile-stats.no-padding
        .row.profile-tabs.text-center.no-margin
          .col-xs-4.profile-tab{"data-toggle" => "tab", :href => "#stats"}
            %p Stats
          .col-xs-4.profile-tab{"data-toggle" => "tab", :href => "#matches"}
            %p Matches
          .col-xs-4.profile-tab{"data-toggle" => "tab", :href => "#team"}
            %p Team
        .row.no-margin{:style =>"height:100%;overflow:auto;"}
          .tab-content{:style =>"height:100%;"}
            #stats.tab-pane.text-center.active{:style =>"height:100%"}
              .row.no-margin.stats-info-background{:style =>"height:100%"}
                .col-xs-4.stats-info.no-padding
                  .col-xs-12.stats-info-title.no-padding
                    %h4 Goals
                  .col-xs-12
                    %h1{:style => "padding-top:25%;"}= @player.goals(@player.id)
                .col-xs-4.stats-info.no-padding
                  .col-xs-12.stats-info-title.no-padding
                    %h4 Appearances
                  .col-xs-12
                    %h1{:style => "padding-top:25%;"}= @player.appearances(@player.id)
                .col-xs-4.stats-info.no-padding
                  .col-xs-12.stats-info-title.no-padding
                    %h4 MOTM
                  .col-xs-12
                    %h1{:style => "padding-top:25%;"}= @player.motms(@player.id)

            / /tab-pane
            #matches.tab-pane
              .col-xs-12
                = render 'matches/index'
                %hr/
                .row
                  .col-md-4.col-md-offset-4.text-center
                    %ul#myPager.pagination
                / /table-resp
                %hr/
              / /tab-pane
            #team.tab-pane
              %h1.centered-axis-xy
                - if @player.team.nil?
                  Free Agent
                - else
                  = @player.team.name
                  %br/
          / /tab-pane
        / /tab-content
    .row
      .col-sm-12.speciality-box
        %h2
          Specialities
        %hr
          
    .row
      .col-xs-12
        .col-xs-4
          %img{:src => "/assets/leader.jpg", :alt => "", :class => "speciality-img"}/
          %p
            Leader
        .col-xs-4
          %img{:src => "/assets/organiser.jpg", :alt => "", :class => "speciality-img"}/
          %p
            Organiser
        .col-xs-4
          %img{:src => "/assets/canon.jpg", :alt => "", :class => "speciality-img"}/
          %p
            Canon
