%h1
  = @player.name

= link_to "Fancy a match?", new_match_path

-#= render 'matches/index'

%p
  %b Age:
  = @player.dob
%p
  %b Position:
  = @player.position
%p
  %b Hometown:
  = @player.hometown
%p
  %b Weight:
  = @player.weight
%p
  %b Height:
  = @player.height
%p
  %b Rating
  #player_ratings
    - form_id = "player#{@player.id}_rating"
    = form_for @player.ratings.last || @player.ratings.build, html: {id: "player#{@player.id}_rating", class: 'star_rating_form'} do |f|
      = f.hidden_field :player_id
      = f.hidden_field :stars, id: "#{form_id}_stars"
    -(1..5).each do |i|
      = image_tag("star-off.png", class: "star_rating", "data-form-id" => form_id, "data-stars" => i, id: "#{form_id}_#{i}")

