= form_for @player do |f|
  - if @player.errors.any?
    #error_explanation
      %h2= "#{pluralize(@player.errors.count, "error")} prohibited this player from being saved:"
      %ul
        - @player.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :age
    = f.integer :position
  .field
    = f.label :position
    = f.string :position
  .field
    = f.label :hometown
    = f.string :hometown
  .field
    = f.label :weight
    = f.string :weight
  .field
    = f.label :height
    = f.string :height
