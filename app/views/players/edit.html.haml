%h1.profile-name
  = @player.name
  - if @player.ratings != []
    -(1..@player.average_rating).each do |i|
      = image_tag("star-on.png")


%h2
  - if @player.team.nil?
    Free Agent
  - else
    = @player.team.name

= form_for @player do |f|
  - if @player.errors.any?
    #error_explanation
      %h2= "#{pluralize(@player.errors.count, "error")} prohibited this player from being saved:"
      %ul
        - @player.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :date_of_birth
    = date_select "player", "dob", { start_year: 100.years.ago.year, end_year: Date.today.year, default: Date.today}
  .field
    = f.label :position
    = f.text_field :position
  .field
    = f.label :hometown
    = f.text_field :hometown
  .field
    = f.label :specialities
    = f.text_field :specialities
  .field
    = f.label :foot
    = f.select :foot, ["Right", "Left"]
  .field
    = f.label :team
    = f.collection_select :team_id, Team.all, :id, :name, :include_blank => "Free Agent"
  - if user_is_admin?
    .field
      = f.label :captain
      = f.select :captain, [["Yes", true], ["No", false]]
  .actions
    = f.submit 'Save'