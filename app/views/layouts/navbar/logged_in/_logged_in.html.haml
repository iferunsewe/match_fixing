%nav.navbar.navbar-default.font-override
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        - (0..2).each do |bar|
          %span.icon-bar
      %a{:href=> "/"}
        %img.pull-left.img-responsive{:src => "/assets/logo-xs.jpg"}
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav{:style =>"width:70%;"}
        %li{:style =>"width:17%;border-left:white;padding-left:5%;"}
          = link_to "My Profile", current_player
        - if current_player.team.nil? && user_is_captain?
          %li{:style =>"width:14%;border-left:white;padding-left:0%;"}
            = link_to "Create Team", new_team_path
        - elsif current_player.team.nil?
          %li{:style =>"width:12%;border-left:white;padding-left:0%;"}
            = link_to "Join Team", edit_player_path(current_player)
        - else
          %li{:style =>"width:12%;border-left:white;padding-left:0%;"}
            = link_to "My Team", current_player.team
        -#- if current_player.team.present? && current_player.team.league.present?
        %li{:style =>"width:20%;border-left:white;padding-left:0%;"}
          = link_to "League Table", league_path(1)
          %span.sr-only (current)
        %li
          = render partial: 'search/input_form'
      %ul.nav.navbar-nav.navbar-right{:style =>"width:25%;"}
        %li{:style =>"padding-left:5%;"}
          = link_to "Edit Account", edit_player_registration_path(current_player), :method => :get, :class => 'navbar-link'
        %li{:style =>"padding-left:5%;"}
          = link_to "Log out", destroy_player_session_path, :method => :delete