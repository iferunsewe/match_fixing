<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class='row'>

    <div class="col-xs-12 text center login-social-media-logos">
      <%= link_to image_tag("grass-facebook-logo.jpg", class: 'login-social-media-logo'), player_omniauth_authorize_path(:facebook) %>
    </div>

    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>
    </div>

    <div class="col-md-5">
      <div class="actions">
        <%= f.submit "Log in", class: "btn nohoverblack btn-black" %>
        <%= link_to "Sign up", new_registration_path(resource_name), class: "btn nohoverblack btn-black" %>
      </div>
    </div>

    <div class="col-xs-7">
      <%= link_to "or have you forgot your password?", new_password_path(resource_name), {class:"link-override-alt"} %>
    </div>


  </div>
<% end %>