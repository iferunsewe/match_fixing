<div class="forms-edit font-override">

<h2 class="text-center devise-form-title">SIGN UP</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <div class='row'>
      <div class="actions text-center">
        <div class="col-md-12">
          <%= link_to image_tag("grass-facebook-logo.jpg", class: 'login-social-media-logo'), player_omniauth_authorize_path(:facebook) %>
            <h4>or</h4>
        </div>
      </div>

      <div class="col-md-12">
        <div class="form-group">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, class: "form-control"%>
        </div>
      </div>

      <div class="col-md-12">
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, class: "form-control"%>
        </div>
      </div>

      <div class="col-md-12">
        <div class="form-group">
          <%= f.label :password %>
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>
      </div>

      <div class="col-md-12">
        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>
      </div>

      <div class="actions text-center">
        <div class="col-xs-12 text-center">
          <%= f.submit "Sign up", class: "btn btn-black nohoverblack" %>

        </div>
      </div>



    </div>
<% end %>

</div>

