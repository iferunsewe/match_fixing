= form_for @match do |f|
  - if @match.errors.any?
    #error_explanation
      %h2= "#{pluralize(@match.errors.count, "error")} prohibited this match from being saved:"
      %ul
        - @match.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :date
    = f.datetime_select :date

  = f.hidden_field :team_a_id, :value => current_player.team.id
  .field
    = f.label :opponent
    = f.collection_select :team_b_id, @match.show_teams_unless_current_team(current_player), :id, :name
  = f.fields_for :ground do |g|
    .field
      = g.label :ground
      = g.text_field :name
    .field
      = g.label :address
      = g.text_area :address
  .actions
    = f.submit 'Save'

