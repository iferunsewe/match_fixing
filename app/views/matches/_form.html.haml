= form_for @match do |f|
  - if @match.errors.any?
    #error_explanation
      %h2= "#{pluralize(@match.errors.count, "error")} prohibited this match from being saved:"
      %ul
        - @match.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :date
    = f.datetime_select :date
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :team_a_score
    = f.number_field :team_a_score
  .field
    = f.label :team_b_score
    = f.number_field :team_b_score
  .field
    = f.label :team_a_id
    = f.number_field :team_a_id
  .field
    = f.label :team_b_id
    = f.number_field :team_b_id
  .actions
    = f.submit 'Save'
