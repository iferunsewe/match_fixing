= form_for @match do |f|
  - if @match.errors.any?
    #error_explanation
      %h2= "#{pluralize(@match.errors.count, "error")} prohibited this match from being saved:"
      %ul
        - @match.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :date
    = f.datetime_select :date

  -#= f.hidden_field :team_a_id, :value => current_player.team.id #ADD THIS IN WHEN WE WANT TO LET TEAMS ARRANGE MATCHES
  .field
    = f.collection_select :team_a_id, Team.all, :id, :name, {:prompt => 'Choose Home Team'}
  .field
    = f.collection_select :team_b_id, Team.all, :id, :name, {:prompt => 'Choose Away Team'}
  = f.fields_for :ground do |g|
    .field
      = g.label :ground
      = g.text_field :name
    .field
      = g.label :address
      = g.text_area :address

  # Form to edit stats - only appears on the edit page
  = f.fields_for :stats do |s|
    .field
      = s.label s.object.player.name
      = s.label s.object.player.team.name
      = s.select :goals, 1..10, prompt: 'Goals'
      = s.select :man_of_the_match, [["Yes", true], ["No", false]]

  .actions
    = f.submit 'Save'
