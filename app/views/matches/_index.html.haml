.table-responsive
  %table.table.table-hover
    %thead
      %tr
        %th Date
        %th Status
        %th
        %th
        %th
        %th
        %th
        %th Ground
        - if user_is_admin?
          %th Actions
          %th
          %th

    %tbody#items
      - @matches.each do |match|
        -if current_player.team == match.team_a || current_player.team == match.team_b
          %tr
            %td= match.date.to_s(:long)
            %td= match.display_status(match.status)
            %td= link_to match.team_a.name, team_path(match.team_a)
            %td= match.team_a_score
            %td vs
            %td= match.team_b_score
            %td= link_to match.team_b.name, team_path(match.team_b)
            - if match.team_a != current_player.team && match.status == nil
              %td
                = form_for match do |f|
                  = f.select :status, [['Accept','true'],['Reject','false']]
                  = f.submit "Match"
            %td
              - if match.ground.present?
                = match.ground.name
            - if user_is_admin?
              %td= link_to 'Show', match, :class => "btn btn-xs btn-black"
              %td= link_to 'Edit', edit_match_path(match), :class => "btn btn-xs btn-warning"
              %td= link_to 'Destroy', match, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn btn-xs btn-danger"

%br
- if user_is_admin?
  = link_to 'New Match', new_match_path
