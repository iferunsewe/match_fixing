.match_container
  .row.ground
    .col.md-12.text-center
      = @match.ground.name

  .match_home.col-xs-6
    .col-xs-12.text-center
      %h3 HOME
      - if current_player.team != @match.team_a && current_player.team == @match.team_b && @match.status && @match.played_and_rated_before(current_player, @match.team_a, @match)
        %h2 Rate team
        %b.object-name= "#{@match.team_a.name}"
        #ratings_form
          = render 'rendered_pages/ratings_form', {object: @match.team_a, model: 'team'}
    .col-xs-12
      %h1.text-center= @match.team_a.name
      .row
        .col-xs-6.col-xs-offset-3
          %img.img-responsive.img-circle{:src => "/assets/grass4.png"}
            .circle-inner
              .score-text
                - if @match.status
                  = @match.team_a_score
                - else
                  0
      .table-responsive
        %table.table.no-border
          %thead
            %tr
              %th Image
              %th Players
              %th Goals
              %th Rating

          %tbody
            - @match.team_a.players.each do |player|
              %tr
                %td
                  %img.img-circle.img-responsive{:src => "http://www.gravatar.com/avatar/28fd20ccec6865e2d5f0e1f4446eb7bf?s=100", :title => "profile image"}/
                %td= player.name
                %td
                  -for i in 0..player.goals(player.id)
                    %i.fa.fa-futbol-o
                %td
                  -for i in 0..player.average_rating
                    %span.glyphicon.glyphicon-star-empty
                %br

  .match_away.col-xs-6
    .col-xs-12.text-center
      %h3 Away
      - if current_player.team != @match.team_b && current_player.team == @match.team_a && @match.status == true && @match.played_and_rated_before(current_player, @match.team_b, @match)
        %h2 Rate team
        %b.object-name= "#{@match.team_b.name}"
        #ratings_form
          = render 'rendered_pages/ratings_form', {object: @match.team_b, model: 'team'}
    .col-xs-12
      %h1.text-center= @match.team_b.name
      .row
        .col-xs-6.col-xs-offset-3
          %img.img-responsive.img-circle{:src => "/assets/grass4.png"}
            .circle-inner
              .score-text
                - if @match.status
                  = @match.team_b_score
                - else
                  0
      .table-responsive
        %table.table.no-border
          %thead
            %tr
              %th Image
              %th Players
              %th Goals
              %th Rating

          %tbody
            - @match.team_b.players.each do |player|
              %tr
                %td
                  %img.img-circle.img-responsive{:src => "http://www.gravatar.com/avatar/28fd20ccec6865e2d5f0e1f4446eb7bf?s=100", :title => "profile image"}/
                %td= player.name
                %td
                  -for i in 0..player.goals(player.id)
                    %i.fa.fa-futbol-o
                %td
                  -for i in 0..player.average_rating
                    %span.glyphicon.glyphicon-star-empty
                %br


- if user_is_admin?
  = link_to 'Edit', edit_match_path(@match)
  \|
= link_to 'Back', matches_path