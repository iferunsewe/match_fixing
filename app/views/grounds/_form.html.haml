= form_for @ground do |f|
  - if @ground.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ground.errors.count, "error")} prohibited this ground from being saved:"
      %ul
        - @ground.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :address
    = f.text_area :address
  .field
    = f.label :name
    = f.text_area :name
  .field
    = f.label :image
    = f.text_area :image
  .actions
    = f.submit 'Save'
